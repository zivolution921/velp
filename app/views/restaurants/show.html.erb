<p>
Restaurant:<br/>
<%= image_tag @restaurant.image_url %>
</p>

<p>
User Image:<br/>  
<% @restaurant.daily_image_urls.each do |url| %>
  <%= image_tag(url) %>
<% end %>
</p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone %>
</p>

<p>
  <strong>Website:</strong>
  <%= @restaurant.website %>
</p>

<%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: "btn btn-link" %> |
<%= link_to 'Add Image', new_restaurant_image_path(@restaurant), class: "btn btn-link" %> |
<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %> |
<%= link_to 'Back', restaurants_path, class: "btn btn-link" %>
